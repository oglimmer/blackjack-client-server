#!/usr/bin/env bash

set -eu

SERVER_BASE=${SERVER_BASE:-https://bj.oglimmer.de/v2}

echo curl $SERVER_BASE/player -d '{"name": "'${1:-}'"}'
PLAYER_RESP=$(curl -s $SERVER_BASE/player -d '{"name": "'${1:-}'"}')

echo $PLAYER_RESP|jq

PLAYER_ID=$(echo "$PLAYER_RESP"|jq -r '.playerId')

echo $PLAYER_ID > /tmp/PLAYER_ID
